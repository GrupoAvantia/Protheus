//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

Static Function Inverte

nTotSel := 0

For i:=1 To Len(aCols)
 	If aCols[i,6] == .f.
 		aCols[i,6] := .t.
    	nTotSel--
    Else
    	aCols[i,6] := .f.
    	nTotSel++
    EndIf	
Next

If nTotSel < 0
	nTotSel := 0
EndIf	

cTotSel := Transform(nTotSel,"@E 9999999")
ObjectMethod(oTotSel,"SetText('"+cTotSel+"')")

Return



