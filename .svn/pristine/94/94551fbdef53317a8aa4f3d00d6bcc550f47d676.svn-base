User Function ConvR2()

	local cEOL := chr(13) + chr(10)
	Local oDlgPedidos
	Local aArea := GetArea()
	local cArqSaida
	local nRecLote
	local nLenLote
	local cLin
	local nContador
	local cModRelogio
	local nTotalizador
	Private aArqLido := {}
	Private nHdl
	Private oNF
	Private oNFChv
	Private oEmitente
	Private oIdent
	Private oDestino
	Private oTotal
	Private oTransp
	Private oDet
	Private cChvNfe
	Private oICM
	Private oIPI
	Private oFatura
	Private cEdit1
	Private _DESCdigit
	Private _NCMdigit
	
	xFilAnt := cFilAnt
	xEmpAnt	:= cEmpAnt
	nRecSm0 := SM0->(Recno())
	
	dbSelectArea("CAD")
	Count To nRecs
	CAD->(dbGoTop())
	
	nRecs := CAD->(RecCount())
	
	ProcRegua(nRecs)
	
	// Loop de Filiais da Empresa
	CAD->(dbGoTop())
	While CAD->(!Eof())
		xEmpAnt := cEmpAnt
		xFilAnt := cFilAnt
		If !Empty(CAD->Arq_OK)
		
			// ===============================		Verifica se a Nomenclatura do Arquivo Est Correta		========================================
			If ((Len(Alltrim(CAD->Arquivos)) == 25) .And. (SUBSTR(CAD->Arquivos, 1, 4) == "REP_")) 
				cModRelogio := SUBSTR(CAD->Arquivos, 5) 	// Carregando o modelo do relogio
			Else
				msgAlert("O arquivo selecionado no est com a nomenclatura correta."+chr(13)+Alltrim(CAD->Arquivos), "Ateno.")
				return
			EndIf
		
			// ===============================		Carregando o Arquivo de Entrada		========================================
			cFile	:= AllTrim(cDiretorio+CAD->Arquivos) // Arquivo XML da Nota Fiscal Eletronica Marcado
			nHdl := FT_FUSE(cFile) // Abrir Arquivo 
			If nHdl == -1
				MsgAlert("O arquivo de nome "+Alltrim(CAD->Arquivos)+" no pode ser aberto! Verifique os parametros.","Ateno!")
				CAD->(dbSkip(1));Loop
			Endif
			FT_FGOTOP() // INICIO DO BANCO
			ProcRegua(FT_FLASTREC()) // Quantidade de registro no arquivo
			aArqLido := {}
			While ! FT_FEOF()
				IncProc("Lendo o Arquivo "+Alltrim(CAD->Arquivos))
				cBuffer := FT_FREADLN()
				aAdd(aArqLido, cBuffer)
				FT_FSKIP()
			EndDo
			FT_FUSE() // Fechando o Arquivo de Entrada
			// ==============================		Carregando o Arquivo de Sada		========================================
			
			cArqSaida := "C:\Prisma\Ponto\"+cModRelogio
			nHdl := fCreate(cArqSaida)
			if nHdl == -1
				msgAlert("No foi possvel criar o arquivo de sada."+chr(13)+"Favor verificar parmetros.", "Ateno.")
			EndIf
			
			// ==============================	Primeira Linha do Arquivo			========================================
			cLin := "0000000001102543302000131            AVANTIA TECNOLOGIA E "
			cLin += "ENGENHARIA S/A                                            "
			cLin += "                                                          "
			cLin += "             "+SUBSTR(cModRelogio,1,17)+"1401201306032014060320141251" + cEOL
			if fWrite(nHdl, cLin, len(cLin)) != len(cLin)
				if ! msgAlert("Ocorreu um erro na gravacao da primeira linha no arquivo. Continua?","Ateno.")
					Return()
				EndIf
			EndIf
			
			// ==============================	Dados das Batidas			========================================
			procRegua(Len(aArqLido))
			nTotalizador := 0
			nRecLote := 0
			For nContador:=1 To Len(aArqLido)
				IncProc("Criando Arquivo "+cModRelogio)
				cLin := aArqLido[nContador] + cEOL
				if fWrite(nHdl, cLin, len(cLin)) != len(cLin)
					if ! msgAlert("Ocorreu um erro na gravacao do arquivo. Continua?","Ateno.")
						Return()				
					EndIf
				EndIf
				If SUBSTR(cLin, 10, 1) == "3"
					nTotalizador++
				EndIf
				nRecLote++
			Next
			
			// ==============================	Ultima Linha do Arquivo			========================================
			cLin := "999999999000000001"+PADL(Alltrim(Transform(nTotalizador,"@E 999999999")),9,"0")+"0000000240000000000"
			if fWrite(nHdl, cLin, len(cLin)) != len(cLin)
				if ! msgAlert("Ocorreu um erro na gravao da ultima linha no arquivo. Continua?","Ateno.")
					Return()				
				EndIf
			EndIf
			
			fClose(nHdl) // Fechando Arquivo de Sada
		Endif
		CAD->(dbSkip(1))
	Enddo
	CAD->(dbGoTop())
	cFilAnt := xFilAnt
	cEmpAnt	:= xEmpAnt
	RestArea(aArea)

	MsgAlert("Gerado com sucesso","A T E N   O !!!")

Return


